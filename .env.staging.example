# ==============================================
# SI RELEVES - STAGING ENVIRONMENT VARIABLES
# ==============================================
# Copy this file to .env.staging and update the values

# MySQL Database Configuration
MYSQL_ROOT_PASSWORD=your_secure_root_password_here
MYSQL_DATABASE=si_releves_staging
MYSQL_USER=si_user_staging
MYSQL_PASSWORD=your_secure_db_password_here
MYSQL_PORT=3308

# Backend Configuration
BACKEND_PORT=5002
NODE_ENV=staging
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters_long
JWT_EXPIRATION=1h

# CORS Configuration
CORS_ORIGIN=http://your-staging-domain.com:3001

# SMTP Configuration (for emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password

# Frontend Configuration
FRONTEND_PORT=3001
VITE_API_URL=http://your-staging-domain.com:5002

# Nginx Configuration (if using reverse proxy)
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Database Backup Configuration
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
