# ============================================
# JENKINS CI/CD - Environment Variables
# ============================================
# Copy this file to .env.jenkins and configure

# Docker Registry
DOCKER_REGISTRY=docker.io
DOCKER_USERNAME=your-dockerhub-username
DOCKER_PASSWORD=your-dockerhub-token

# Deployment Hosts
DEPLOY_HOST_STAGING=user@staging.si-releves.com
DEPLOY_HOST_PRODUCTION=user@production.si-releves.com

# Application URLs
VITE_API_URL_STAGING=http://staging.si-releves.com:5002
VITE_API_URL_PRODUCTION=https://production.si-releves.com

FRONTEND_URL_STAGING=http://staging.si-releves.com:3001
FRONTEND_URL_PRODUCTION=https://production.si-releves.com

BACKEND_URL_STAGING=http://staging.si-releves.com:5002
BACKEND_URL_PRODUCTION=https://production.si-releves.com:5002

# Email Notifications
DEFAULT_RECIPIENTS=dev-team@company.com,ops-team@company.com

# Slack (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#ci-cd

# GitHub (Optional)
GITHUB_TOKEN=ghp_your_github_personal_access_token

# SSH Keys Location
SSH_PRIVATE_KEY_PATH=/var/jenkins_home/.ssh/id_rsa
SSH_PUBLIC_KEY_PATH=/var/jenkins_home/.ssh/id_rsa.pub

# Build Configuration
BUILD_TIMEOUT_MINUTES=30
MAX_BUILDS_TO_KEEP=10
PARALLEL_TEST_WORKERS=2

# Security
ENABLE_SECRET_SCAN=true
ENABLE_DEPENDENCY_AUDIT=true
FAIL_ON_HIGH_VULNERABILITIES=false

# Deployment Strategy
AUTO_DEPLOY_STAGING=true
REQUIRE_APPROVAL_PRODUCTION=true
ROLLBACK_ON_FAILURE=true
