<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> AIOps Dashboard - SI Relev√©s</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
        }

        header {
            background: white;
            border-radius: 10px;
            padding: 30px;
            margin-bottom: 20px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

        h1 {
            color: #667eea;
            margin-bottom: 10px;
        }

        .tagline {
            color: #666;
            font-style: italic;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 20px;
        }

        .stat-card {
            background: white;
            border-radius: 10px;
            padding: 25px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            transition: transform 0.2s;
        }

        .stat-card:hover {
            transform: translateY(-5px);
        }

        .stat-number {
            font-size: 36px;
            font-weight: bold;
            color: #667eea;
        }

        .stat-label {
            color: #666;
            margin-top: 5px;
        }

        .section {
            background: white;
            border-radius: 10px;
            padding: 30px;
            margin-bottom: 20px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

        .section-title {
            font-size: 24px;
            margin-bottom: 20px;
            color: #333;
            border-bottom: 3px solid #667eea;
            padding-bottom: 10px;
        }

        .anomaly-card {
            background: #f8f9fa;
            border-left: 4px solid #dc3545;
            padding: 20px;
            margin-bottom: 15px;
            border-radius: 5px;
        }

        .anomaly-card.medium {
            border-left-color: #ffc107;
        }

        .anomaly-card.low {
            border-left-color: #28a745;
        }

        .anomaly-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 10px;
        }

        .anomaly-type {
            font-weight: bold;
            color: #333;
        }

        .severity-badge {
            padding: 5px 15px;
            border-radius: 20px;
            color: white;
            font-size: 12px;
            font-weight: bold;
        }

        .severity-high {
            background: #dc3545;
        }

        .severity-medium {
            background: #ffc107;
        }

        .severity-low {
            background: #28a745;
        }

        .recommendation-card {
            background: #e7f3ff;
            border-left: 4px solid #0066cc;
            padding: 20px;
            margin-bottom: 15px;
            border-radius: 5px;
        }

        .recommendation-title {
            font-weight: bold;
            color: #0066cc;
            margin-bottom: 10px;
        }

        .actions-list {
            list-style: none;
            margin-top: 10px;
        }

        .actions-list li {
            padding: 8px 0;
            padding-left: 25px;
            position: relative;
        }

        .actions-list li:before {
            content: "‚úì";
            position: absolute;
            left: 0;
            color: #0066cc;
            font-weight: bold;
        }

        .no-data {
            text-align: center;
            padding: 40px;
            color: #999;
        }

        .analyze-btn {
            background: #667eea;
            color: white;
            border: none;
            padding: 12px 24px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            transition: background 0.2s;
        }

        .analyze-btn:hover {
            background: #5568d3;
        }

        .refresh-info {
            text-align: right;
            color: #666;
            margin-top: 20px;
            font-size: 14px;
        }

        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }

        .analyzing {
            animation: pulse 1.5s infinite;
        }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <h1> AIOps Dashboard - SI Relev√©s</h1>
            <p class="tagline">L'IA analyse les logs et d√©tecte des anomalies</p>
        </header>

        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-number"><%= stats.total_anomalies %></div>
                <div class="stat-label">Anomalies D√©tect√©es</div>
            </div>
            <div class="stat-card">
                <div class="stat-number"><%= stats.total_recommendations %></div>
                <div class="stat-label">Recommandations Actives</div>
            </div>
            <div class="stat-card">
                <div class="stat-number"><%= stats.error_patterns_count %></div>
                <div class="stat-label">Patterns d'Erreurs</div>
            </div>
            <div class="stat-card">
                <button class="analyze-btn" onclick="runAnalysis()">üîç Analyser Maintenant</button>
            </div>
        </div>

        <div class="section">
            <h2 class="section-title"> Anomalies D√©tect√©es</h2>
            <% if (anomalies && anomalies.length > 0) { %>
                <% anomalies.slice(-10).reverse().forEach(anomaly => { %>
                    <div class="anomaly-card <%= anomaly.severity.toLowerCase() %>">
                        <div class="anomaly-header">
                            <span class="anomaly-type">
                                <%= anomaly.type.replace(/_/g, ' ').toUpperCase() %>
                            </span>
                            <span class="severity-badge severity-<%= anomaly.severity.toLowerCase() %>">
                                <%= anomaly.severity %>
                            </span>
                        </div>
                        <p><strong>Message:</strong> <%= anomaly.message %></p>
                        <% if (anomaly.count) { %>
                            <p><strong>Occurrences:</strong> <%= anomaly.count %>x</p>
                        <% } %>
                        <% if (anomaly.recommendation) { %>
                            <p><strong> Recommandation:</strong> <%= anomaly.recommendation %></p>
                        <% } %>
                        <p style="color: #999; font-size: 12px; margin-top: 10px;">
                            D√©tect√© le: <%= new Date(anomaly.detected_at).toLocaleString('fr-FR') %>
                        </p>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="no-data">
                     Aucune anomalie d√©tect√©e - Syst√®me en bonne sant√©
                </div>
            <% } %>
        </div>

        <div class="section">
            <h2 class="section-title"> Recommandations IA</h2>
            <% if (recommendations && recommendations.length > 0) { %>
                <% recommendations.forEach(rec => { %>
                    <div class="recommendation-card">
                        <div class="recommendation-title">
                            üéØ <%= rec.title %> (<%= rec.priority %> Priority)
                        </div>
                        <p><%= rec.description %></p>
                        <ul class="actions-list">
                            <% rec.actions.forEach(action => { %>
                                <li><%= action %></li>
                            <% }); %>
                        </ul>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="no-data">
                    ‚Ñπ Aucune recommandation pour le moment
                </div>
            <% } %>
        </div>

        <% if (stats.top_errors && stats.top_errors.length > 0) { %>
        <div class="section">
            <h2 class="section-title"> Top 5 Erreurs Fr√©quentes</h2>
            <% stats.top_errors.forEach((error, index) => { %>
                <div style="background: #f8f9fa; padding: 15px; margin-bottom: 10px; border-radius: 5px;">
                    <strong>#<%= index + 1 %></strong>
                    <span style="color: #dc3545; font-weight: bold;"><%= error[1] %>x</span> -
                    <%= error[0].substring(0, 100) %>...
                </div>
            <% }); %>
        </div>
        <% } %>

        <div class="refresh-info">
            ‚è±Ô∏è Auto-refresh: 30 secondes | Derni√®re mise √† jour: <span id="lastUpdate"></span>
        </div>
    </div>

    <script>
        function updateTime() {
            document.getElementById('lastUpdate').textContent = new Date().toLocaleTimeString('fr-FR');
        }

        async function runAnalysis() {
            const btn = document.querySelector('.analyze-btn');
            btn.classList.add('analyzing');
            btn.textContent = '‚è≥ Analyse en cours...';

            try {
                const response = await fetch('/api/analyze', { method: 'POST' });
                const data = await response.json();

                alert(` Analyse termin√©e!\\n\\nLogs analys√©s: ${data.analyzed_logs || 0}\\nAnomalies: ${data.anomalies_detected || 0}\\nRecommandations: ${data.recommendations || 0}`);

                // Rafra√Æchir la page
                setTimeout(() => location.reload(), 1000);
            } catch (error) {
                alert('‚ùå Erreur lors de l\'analyse: ' + error.message);
            } finally {
                btn.classList.remove('analyzing');
                btn.textContent = 'üîç Analyser Maintenant';
            }
        }

        // Auto-refresh toutes les 30 secondes
        setInterval(() => location.reload(), 30000);

        // Mettre √† jour l'heure initiale
        updateTime();
    </script>
</body>
</html>
